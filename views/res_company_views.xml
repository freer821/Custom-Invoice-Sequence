<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form_custom_invoice" model="ir.ui.view">
        <field name="name">res.company.form.custom.invoice</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_settings']" position="inside">
                <group string="Custom Invoice Numbering">
                    <field name="use_custom_invoice_sequence"/>
                    <field name="invoice_custom_sequence_id" 
                           invisible="not use_custom_invoice_sequence"
                           domain="[('code', '=', 'custom.invoice.sequence')]"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
